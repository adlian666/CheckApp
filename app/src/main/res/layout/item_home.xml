<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:clickable="true"
    android:paddingBottom="1dp"
    app:ios="true"
    app:leftSwipe="true"
    app:swipeEnable="true">

<LinearLayout
    android:id="@+id/ll_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/my_item"

    >

    <TextView
        android:id="@+id/tv_check_time"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="验收日期"
        style="@style/text"
        />
    <TextView
        android:id="@+id/tv_drill_id"
        android:gravity="center"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:text="施工地点"
        style="@style/text"
    />
    <TextView
        android:id="@+id/tv_class_number"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="班次"
        style="@style/text"
        />
    <TextView
        android:id="@+id/tv_drill_no"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="孔号"
        style="@style/text"
        />
    <TextView
        android:id="@+id/tv_drill_pro"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="钻孔性质"
        style="@style/text"
        />
    <TextView
        android:id="@+id/tv_checker"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="验收人"
        style="@style/text"
        />
    <TextView
        android:id="@+id/tv_check_result"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="验收情况"
        style="@style/text"
        />

</LinearLayout>


  <Button
      android:id="@+id/btn_modify"

      android:layout_width="100dp"
      android:layout_height="match_parent"
      android:background="@color/text_grey"
      android:text="修改"
      android:textColor="@android:color/white"/>
     <Button
         android:id="@+id/btnDelete"
         android:layout_width="100dp"
         android:layout_height="match_parent"
         android:background="#FF0000"
         android:text="删除"
         android:textColor="@android:color/white"/>
 </com.mcxtzhang.swipemenulib.SwipeMenuLayout>


