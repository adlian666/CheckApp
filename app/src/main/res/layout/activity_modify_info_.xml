<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Modify_info_Activity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay">
                <ImageButton
                    android:id="@+id/imbtn_back"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:scaleType="fitStart"
                    android:src="@mipmap/back" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="修改信息"
                    android:textColor="@color/text_menu"
                    android:textSize="18sp" />

            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:gravity="center"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/my_item"
                android:orientation="horizontal">

                <TextView
                    style="@style/text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="孔位:" />
                <TextView
                    android:background="@drawable/my_item1"
                    style="@style/text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:text="距离" />

                <Spinner
                    android:id="@+id/sp_drill_position"
                    style="@style/text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-1dp"
                    android:layout_marginBottom="-1dp"
                    android:layout_weight="1.5"
                    android:background="@drawable/my_item1"
                    android:gravity="center_horizontal"
                    android:spinnerMode="dropdown" />

                <EditText
                    android:id="@+id/et_drill_distance"
                    style="@style/text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-1dp"
                    android:layout_marginBottom="-1dp"
                    android:layout_weight="1.5"
                    android:background="@drawable/my_item1"
                    android:gravity="center"
                    android:hint="请输入距离"
                    android:singleLine="true" />
                <TextView
                    style="@style/text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="米" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/my_item"
                android:orientation="horizontal">

                <TextView
                    style="@style/text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="施工地点:" />

                <Spinner
                    android:id="@+id/sp_location"
                    style="@style/text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-1dp"
                    android:layout_marginBottom="-1dp"
                    android:layout_weight="2"
                    android:background="@drawable/my_item1"
                    android:gravity="center_horizontal" />

                <TextView
                    style="@style/text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="钻孔号:" />

                <EditText
                    android:id="@+id/et_drill_no"
                    style="@style/text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-1dp"
                    android:layout_marginBottom="-1dp"
                    android:layout_weight="2"
                    android:background="@drawable/my_item1"
                    android:gravity="center"
                    android:hint="钻孔号"
                    android:singleLine="true" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/my_item"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="钻孔性质"
                    style="@style/text" />
                <TextView
                    android:background="@drawable/my_item1"
                    android:id="@+id/tv_drill_pro"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="钻孔性质"
                    style="@style/text" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="班次"
                    style="@style/text"/>

                <Spinner
                    android:id="@+id/sp_class_number"
                    style="@style/text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-1dp"
                    android:layout_marginBottom="-1dp"
                    android:layout_weight="2"
                    android:background="@drawable/my_item1"
                    android:entries="@array/class_number"
                    android:gravity="center_horizontal"
                    android:spinnerMode="dropdown" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/my_item"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="钻机型号"
                    style="@style/text" />

                <EditText
                    android:id="@+id/et_machine_model"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-1dp"
                    android:layout_marginBottom="-1dp"
                    android:layout_weight="2"
                    android:background="@drawable/my_item1"
                    android:gravity="center"
                    style="@style/text"
                    android:hint="钻机型号"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="钻机编号"
                    style="@style/text"
                    />

                <EditText
                    android:id="@+id/et_machine_code"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-1dp"
                    android:layout_marginBottom="-1dp"
                    android:layout_weight="2"
                    android:background="@drawable/my_item1"
                    android:gravity="center"
                    style="@style/text"
                    android:hint="钻机编号"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/my_item"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="孔径(Φ)"
                    style="@style/text" />

                <EditText
                    android:id="@+id/et_drill_d"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-1dp"
                    android:layout_marginBottom="-1dp"
                    android:layout_weight="2"
                    android:background="@drawable/my_item1"
                    android:gravity="center"
                    style="@style/text"
                    android:hint="孔径"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="倾角(°)"
                    style="@style/text"/>

                <EditText
                    android:id="@+id/et_drill_"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-1dp"
                    android:layout_marginBottom="-1dp"
                    android:layout_weight="2"
                    android:background="@drawable/my_item1"
                    android:gravity="center"
                    android:hint="倾角"
                    style="@style/text"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/my_item"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="钻孔深度(m)"
                    style="@style/text"/>

                <EditText
                    android:id="@+id/et_drill_depth"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-1dp"
                    android:layout_marginBottom="-1dp"
                    android:layout_weight="2"
                    android:background="@drawable/my_item1"
                    android:gravity="center"
                    android:hint="钻孔深度"
                    style="@style/text"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="封孔深度(m)"
                    style="@style/text" />

                <EditText
                    android:id="@+id/et_fk_depth"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-1dp"
                    android:layout_marginBottom="-1dp"
                    android:layout_weight="2"
                    android:background="@drawable/my_item1"
                    android:gravity="center"
                    android:hint="封孔深度"
                    style="@style/text"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/my_item"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="验收情况"
                    style="@style/text" />
                <Spinner
                    android:id="@+id/sp_check_result"
                    style="@style/text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-1dp"
                    android:layout_marginBottom="-1dp"
                    android:layout_weight="2"
                    android:background="@drawable/my_item1"
                    android:entries="@array/check_result" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="施工人员"
                    style="@style/text" />

                <EditText
                    android:id="@+id/et_builder"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-1dp"
                    android:layout_marginBottom="-1dp"
                    android:layout_weight="2"
                    android:background="@drawable/my_item1"
                    android:gravity="center"
                    android:hint="施工人员"
                    style="@style/text"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/my_item"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="跟班队长"
                    style="@style/text" />

                <EditText
                    android:id="@+id/et_monitor"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-1dp"
                    android:layout_marginBottom="-1dp"
                    android:layout_weight="2"
                    android:background="@drawable/my_item1"
                    android:gravity="center"
                    android:hint="跟班队长"
                    style="@style/text" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="验收人"
                    style="@style/text"/>

                <EditText
                    android:id="@+id/et_checker"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-1dp"
                    android:layout_marginBottom="-1dp"
                    android:layout_weight="2"
                    android:background="@drawable/my_item1"
                    android:gravity="center"
                    android:hint="验收人"
                    style="@style/text"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_submmit"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/my_item_btn"
                android:gravity="center"
                android:text="确认修改"
                android:textColor="#ffffff"
                style="@style/text"></Button>


        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>